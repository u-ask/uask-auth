{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "All unit tests",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "cwd": "${workspaceFolder}",
            "args": [
                "${workspaceFolder}/libs/fluentwalk/register.js", "./src/**/*.test.js"
            ],
            "envFile": "${workspaceFolder}/.env",
            "internalConsoleOptions": "openOnSessionStart",
            "outputCapture": "std"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Current file unit tests",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "cwd": "${workspaceFolder}",
            "args": [
                "${file}"
            ],
            "envFile": "${workspaceFolder}/.env",
            "internalConsoleOptions": "openOnSessionStart",
            "outputCapture": "std"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Server",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "args": [
                "${workspaceFolder}/src/devserver.js"
            ],
            "envFile": "${workspaceFolder}/.env",
            "internalConsoleOptions": "openOnSessionStart",
            "outputCapture": "std"
        }
    ]
}